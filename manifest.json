{
    "ESP Controller": {
        "description": "ESP controller",
        "type": "esp32c3",
        "baudrate": 460800,
        "before": "default_reset",
        "after": "hard_reset",
        "no-stub": false,
        "flash-mode": "dio",
        "flash-size": "4MB",
        "flash-freq": "80m",
        "write-flash": [
            ["0x0", "smart_switch_a/bootloader.bin"],
            ["0x8000", "smart_switch_a/partition-table.bin"],
            ["0x10c000", "smart_switch_a/ota_data_initial.bin"],
            ["0x110000", "smart_switch_a/app.bin"]
        ]
    },
    "NRF52 Controller (BlackMagicProbe)": {
        "description": "NRF52 Controller with BlackMagicProbe",
        "type": "bmp",
        "attach": 1,
        "tpwr": true,
        "load": "nrf52_controller/merged.hex"
    },
    "NRF52 Controller (OpenOCD)": {
        "description": "NRF52 Controller with OpenOCD",
        "type": "openocd",
        "interface": "/opt/homebrew/share/openocd/scripts/interface/cmsis-dap.cfg",
        "target": "/opt/homebrew/share/openocd/scripts/target/nrf52.cfg",
        "program": "nrf52_controller/merged.hex"
    }
}
