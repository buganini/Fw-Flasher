{
    "[ESPTool] ESP32C3 Blink": {
        "description": "[EspTool] ESP32C3 Blink",
        "type": "esp32c3",
        "erase-flash": false,
        "baudrate": 460800,
        "before": "default-reset",
        "after": "hard-reset",
        "no-stub": false,
        "flash-mode": "dio",
        "flash-size": "2MB",
        "flash-freq": "80m",
        "write-flash": [
            ["0x0", "blink/bootloader.bin"],
            ["0x8000", "blink/partition-table.bin"],
            ["0x10000", "blink/blink.bin"]
        ],
        "efuse": [
            ["DIS_PAD_JTAG", "1"]
        ]
    },
    "[ESPTool] ESP32C3 Blink with flash encryption + secure boot": {
        "description": "[EspTool] ESP32C3 Blink with flash encryption + secure boot enabled externally",
        "type": "esp32c3",
        "erase-flash": false,
        "baudrate": 460800,
        "before": "default-reset",
        "after": "hard-reset",
        "no-stub": false,
        "flash-mode": "dio",
        "flash-size": "2MB",
        "flash-freq": "80m",
        "write-flash": [
            ["0x0", "blink/bootloader.bin"],
            ["0x8000", "blink/partition-table.bin"],
            ["0x10000", "blink/blink.bin"]
        ],
        "security": {
            "flash_encryption_key": "",
            "__comment_flash_encryption_key": "Leave empty to generate a random key",
            "flash_encryption_key_block": "BLOCK_KEY0",
            "flash_encryption_key_purpose": "XTS_AES_128_KEY",
            "secure_boot_overwrite_bootloader": false,
            "secure_boot_digest": "credentials/secure_boot_digest.bin",
            "secure_boot_digest_block": "BLOCK_KEY1",
            "secure_boot_digest_purpose": "SECURE_BOOT_DIGEST0",
        },
        "efuse": [
            ["DIS_DOWNLOAD_ICACHE", "1"],
            ["DIS_DIRECT_BOOT", "1"],
            ["DIS_USB_JTAG", "1"],
            ["DIS_PAD_JTAG", "1"],
            ["SECURE_BOOT_EN", "1"]
        ],
        "write-protect-efuse": ["DIS_ICACHE"]
    },
    "[BlackMagicProbe] NRF52 Controller": {
        "description": "[BlackMagicProbe] NRF52 Controller",
        "type": "bmp",
        "attach": 1,
        "tpwr": true,
        "connect_rst": true,
        "load": "nrf52_controller/merged.hex"
    },
    "[OpenOCD/CMSIS-DAP] NRF52 Controller": {
        "description": "[OpenOCD/CMSIS-DAP] NRF52 Controller",
        "type": "openocd",
        "interface": "cmsis-dap.cfg",
        "transport": "swd",
        "target": "nrf52.cfg",
        "program": "nrf52_controller/merged.hex"
    },
    "[OpenOCD/JLink] NRF52 Controller": {
        "description": "[OpenOCD/JLink] NRF52 Controller",
        "type": "openocd",
        "interface": "jlink.cfg",
        "transport": "swd",
        "target": "nrf52.cfg",
        "program": "nrf52_controller/merged.hex"
    },
    "[OpenOCD/ST-Link] STM32 Controller": {
        "description": "[OpenOCD/ST-Link] STM32 Controller",
        "type": "openocd",
        "interface": "stlink.cfg",
        "target": "stm32f1x.cfg",
        "before": [
            "reset halt",
            "stm32f1x unlock 0"
        ],
        "after": [
            "reset halt",
            "stm32f1x lock 0",
            "reset run"
        ],
        "program": "firmware.bin",
        "program-offset": "0x08000000"
    },
    "[DFU] BlackMagicProbe": {
        "description": "[DFU] BlackMagicProbe",
        "type": "dfu",
        "downloads": [
            {
                "dfuse-address": "0x08002000:leave",
                "download": "blackmagic_native_firmware.bin",
                "reset": true
            }
        ]
    },
    "[PyOCD] NRF91 modem/app firmware": {
        "description": "[PyOCD] NRF91 modem/app firmware",
        "type": "pyocd",
        "target": "nrf91",
        "frequency": 4000000,
        "commands": [
            ["nrf91-update-modem-fw", "mfw_nrf91x1_2.0.2.zip"],
            ["load", "nrf9151_slm.hex"]
        ]
    }
}
